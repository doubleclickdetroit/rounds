// HORIZONTAL LIST
// --------------------------------------------------
.list-horizontal
	@extend .clearfix
	margin: 0

	list-style: none

	li
		float: left

	&.list-delimit li
		&:before
			content: "|"
		&:first-child:before
			content: ""

		a
			padding: 0 5px



// UI ELEMENTS
// --------------------------------------------------
.ui-stream
	@extend .margin-auto-center
	@extend .padding-none
	max-width: 50%
	list-style: none

	li
		@extend .margin-tops
		border: 1px solid $black

		.ui-slide
			img
				min-width: 100%

		.ui-details
			@extend .clearfix
			padding: $gridGutterWidth / 2
			background-color: $grayLighter

			.user
				@extend .pull-left

				img
					max-width : $gridGutterWidth * 2
					max-height: $gridGutterWidth * 2
					vertical-align: middle

				span
					@extend .layout-inlineblock
					line-height: $gridGutterWidth * 2

			.comments
				@extend .text-right
				line-height: $gridGutterWidth * 2

.ui-round
	header
		@extend .text-center

		h1
			@extend .margin-no-bottom